# @baileys-store/core - Production Environment Variables

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=baileys123
REDIS_DB=0
REDIS_URL=redis://:baileys123@localhost:6379/0

# MongoDB Configuration
MONGO_URL=mongodb://baileys:baileys123@localhost:27017/whatsapp
MONGO_DATABASE=whatsapp
MONGO_COLLECTION=auth

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=baileys-hybrid-auth
KAFKA_GROUP_ID=baileys-auth-persist-group
KAFKA_TOPIC=baileys-auth-persist

# Security Configuration
ENABLE_ENCRYPTION=true
ENABLE_COMPRESSION=true
MASTER_KEY=your-64-character-hex-master-key-here-for-production-use-only
ENCRYPTION_ALGORITHM=secretbox
COMPRESSION_ALGORITHM=snappy

# TTL Configuration (in seconds)
DEFAULT_TTL=86400
CREDS_TTL=86400
KEYS_TTL=86400
LOCK_TTL=5

# Resilience Configuration
OPERATION_TIMEOUT=5000
MAX_RETRIES=3
RETRY_BASE_DELAY=100
RETRY_MULTIPLIER=2

# Observability Configuration
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_DETAILED_LOGS=false
METRICS_INTERVAL=60000

# Write-Behind Configuration
ENABLE_WRITE_BEHIND=true
WRITE_BEHIND_FLUSH_INTERVAL=1000
WRITE_BEHIND_QUEUE_SIZE=1000

# Session Configuration
SESSION_ID=my-production-session
FENCING_TOKEN=1234567890

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info
PORT=3000
